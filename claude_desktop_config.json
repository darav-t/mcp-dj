{
  "_comment": "Add the 'mcp-dj' block inside the 'mcpServers' key in your Claude Desktop config.",
  "_config_location_mac": "~/Library/Application Support/Claude/claude_desktop_config.json",
  "_config_location_win": "%APPDATA%\\Claude\\claude_desktop_config.json",
  "_instructions": "Replace /path/to/mcp_dj below with the absolute path to this repo on your machine.",
  "mcpServers": {
    "mcp-dj": {
      "command": "uv",
      "args": [
        "run",
        "--project",
        "/path/to/mcp_dj",
        "python",
        "-m",
        "mcp_dj.mcp_server"
      ],
      "env": {
        "ANTHROPIC_API_KEY": "sk-ant-...",
        "MIK_CSV_PATH": "/path/to/Mixed In Key Data/Library.csv"
      }
    }
  }
}
